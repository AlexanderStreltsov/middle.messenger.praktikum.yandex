{
  "name": "middle.messenger.praktikum.yandex",
  "private": true,
  "version": "0.0.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "vite build && node server.cjs",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "format:check": "prettier --check \"src/**/*.{ts,css,hbs}\"",
    "format:write": "prettier --write \"src/**/*.{ts,css,hbs}\"",
    "typecheck": "tsc --noEmit",
    "stylelint": "stylelint \"src/**/*.css\"",
    "stylelint:fix": "stylelint --fix \"src/**/*.css\"",
    "check": "npm run typecheck && npm run lint && npm run stylelint && npm run format:check && npm run build"
  },
  "devDependencies": {
    "@eslint/js": "9.21.0",
    "@typescript-eslint/eslint-plugin": "8.25.0",
    "@typescript-eslint/parser": "8.25.0",
    "eslint": "9.21.0",
    "eslint-config-prettier": "10.0.2",
    "eslint-plugin-prettier": "5.2.3",
    "globals": "16.0.0",
    "prettier": "3.5.2",
    "stylelint": "16.14.1",
    "stylelint-config-standard": "37.0.0",
    "typescript": "5.7.2",
    "typescript-eslint": "8.25.0",
    "vite": "6.1.0"
  },
  "dependencies": {
    "express": "4.21.2",
    "handlebars": "4.7.8"
  }
}
